<% if(error?.length){ %>
<label id="error-toast"><%= error %></label>
<% } %> <% if(success?.length){ %>
<label id="success-toast"><%= success %></label>
<% } %>

<form action="" class="mb-2">
  <div class="row">
    <div class="col-10">
      <input
        type="search"
        name="keyword"
        class="form-control"
        placeholder="Từ khóa tìm kiếm..."
        value="<%= req.query.keyword %>"
      />
    </div>
    <div class="col-2 d-grid">
      <button type="submit" class="btn btn-primary">Tìm kiếm</button>
    </div>
  </div>
</form>
<table class="table table-bordered">
  <% if(classes?.length){%>
  <a href="/admin/manager/classes/add" class="btn btn-success mb-2">Thêm</a>
  <a href="/admin/manager/classes/export" class="btn btn-secondary mb-2 ml-2"
    >Export file(xlsx)</a
  >
  <thead>
    <tr>
      <th scope="col">STT</th>
      <th scope="col">Tên lớp</th>
      <th scope="col">Sĩ số</th>
      <th width="10%" scope="col">Ngày khai giảng</th>
      <th width="10%" scope="col">Ngày bế giảng</th>
      <th width="15%" scope="col">Lịch học</th>
      <th width="10%" scope="col">Thời gian học</th>
      <th width="10%" scope="col">Giảng viên</th>
      <th width="10%" scope="col">Khóa học</th>
      <th>Sửa</th>
      <th>Xóa</th>
    </tr>
  </thead>
  <tbody>
    <% classes.forEach((c, index) => {%>
    <tr>
      <td><%= ++offset %></td>
      <td><%= c.name %></td>
      <td><%= c.quantity %></td>
      <td><%= c.startDate %></td>
      <td><%= c.endDate %></td>
      
      <%  if (c.classes_schedules?.length) {%>
        <% let schedule = "" %>
        <%  c.classes_schedules.forEach((e, index) => {%>
            <% if(index===c.classes_schedules.length-1){%>
              <% schedule += getDay(e.schedule)  %>
              <% return %>
            <%} %>
            <% schedule += getDay(e.schedule) + ", " %>
      
            <%});%>
            <td><%= schedule %></td>
          <%}else{%>
          <td><%= getDay(c.schedule) %></td>
          <%}%>
     

      <td><%= c.timeLearn %></td>
     
      <td>
        <%= Object.assign({}, c.Users)['0']?.name ?? "Chưa có giảng viên" %>
      </td>
      <% if(c.Course){%>
        <td><%= c.Course.name %></td>
      <%}else{%>
        <td>Chưa có khóa học</td>
      <%} %>
    
      <td>
        <a
          href="/admin/manager/classes/edit/<%= c.id  %>"
          class="btn btn-warning edit"
        > <svg  xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
          <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
          <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z"/>
        </svg>
      </a>   
        
      </td>
      <form action="/admin/manager/classes/delete/<%= c.id  %>" method="post">
        <td>
          <button type="submit" class="btn btn-danger delete">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
              <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"/>
              <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"/>
            </svg>
          </button>
        </td>
      </form>
    </tr>
    <% }) %>
  </tbody>

  <% } %>
</table>
<% if (totalPage > 1) { %>
  <nav class="d-flex justify-content-end mt-2">
    <ul class="pagination">
      <% if (page > 1) { %>
      <li class="page-item">
        <a class="page-link" href="?page=<%= +page - 1 %>">Trước</a>
      </li>
      <% } %> <% for (let i = 1; i <= totalPage; i++) { %>
      <li class="page-item <%= +page === +i ? 'active': '' %>">
        <a class="page-link" href="?<%= getPaginateUrl(req, i) %>"><%= i %></a>
      </li>
      <% } %> <% if (page < totalPage) { %>
      <li class="page-item">
        <a class="page-link" href="?page=<%= +page + 1 %>">Sau</a>
      </li>
      <% } %>
    </ul>
  </nav>
  <% } %>
<script>
  const btnDelete = document.querySelectorAll(".btn.btn-danger.delete");
  btnDelete.forEach((btn) => {
    btn.addEventListener("click", (e) => {
      const value = confirm("Bạn có chắc chắn muốn xóa lớp học này?");
      if (!value) {
        e.preventDefault();
      }
    });
  });
</script>
