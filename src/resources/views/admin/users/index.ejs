<% if(success?.length){ %>
<label class="col-12 alert alert-success"><%= success %></label>
<% } %> <% if(error?.length){ %>
<label class="col-12 alert alert-danger"><%= error %></label>
<% } %>
<form action="" class="mb-2">
  <div class="row">
    <div class="col-10">
      <input
        type="search"
        name="keyword"
        class="form-control"
        placeholder="Từ khóa tìm kiếm..."
        value="<%= req.query.keyword %>"
      />
    </div>
    <div class="col-2 d-grid">
      <button type="submit" class="btn btn-primary">Tìm kiếm</button>
    </div>
  </div>
</form>
<table class="table table-bordered">
  <% if(users?.length){%>
  <a href="/admin/manager/users/add" class="btn btn-success mb-2">Thêm</a>
  <thead>
    <tr>
      <th scope="col">STT</th>
      <th scope="col">Email</th>
      <th scope="col">Tên</th>
      <th scope="col">Số điện thoại</th>
      <th scope="col">Địa chỉ</th>
      <th>Sửa</th>
      <th>Xóa</th>
    </tr>
  </thead>
  <tbody>
    <% users.forEach((user, index) => {%>
    <tr>
      <td><%= ++offset %></td>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.phone %></td>
      <td><%= user.address %></td>
      <td>
        <a
          href="/admin/manager/users/edit/<%= user.id  %>"
          class="btn btn-warning edit"
          >Sửa</a
        >
      </td>
      <form action="/admin/manager/users/delete/<%= user.id  %>" method="post">
        <td>
          <button type="submit" class="btn btn-danger delete">Xóa</button>
        </td>
      </form>
    </tr>
    <% }) %>
  </tbody>

  <% } %>
</table>
<% if (totalPage > 1) { %>
<nav class="d-flex justify-content-end mt-2">
  <ul class="pagination">
    <% if (page > 1) { %>
    <li class="page-item">
      <a class="page-link" href="?page=<%= +page - 1 %>">Trước</a>
    </li>
    <% } %> <% for (let i = 1; i <= totalPage; i++) { %>
    <li class="page-item <%= +page === +i ? 'active': '' %>">
      <a class="page-link" href="?<%= getPaginateUrl(req, i) %>"><%= i %></a>
    </li>
    <% } %> <% if (page < totalPage) { %>
    <li class="page-item">
      <a class="page-link" href="?page=<%= +page + 1 %>">Sau</a>
    </li>
    <% } %>
  </ul>
</nav>
<% } %>
<script>
  const btnDelete = document.querySelectorAll(".btn.btn-danger.delete");
  btnDelete.forEach((btn) => {
    btn.addEventListener("click", (e) => {
      const value = confirm("Bạn có chắc chắn muốn xóa người dùng này?");
      if (!value) {
        e.preventDefault();
      }
    });
  });
</script>
