<% if(error?.length){ %>
<label id="error-toast"><%= error %></label>
<% } %> <% if(success?.length){ %>
<label id="success-toast"><%= success %></label>
<% } %>
<form action="" class="mb-2">
  <div class="row">
    <div class="col-10">
      <input
        type="search"
        name="keyword"
        class="form-control"
        placeholder="Từ khóa tìm kiếm..."
        value="<%= req.query.keyword %>"
      />
    </div>
    <div class="col-2 d-grid">
      <button type="submit" class="btn btn-primary">Tìm kiếm</button>
    </div>
  </div>
</form>

<table class="table table-bordered">
  <% if(students?.length){%>

  <a href="/admin/manager/students/add" class="btn btn-success mb-2">Thêm học viên</a>

  <thead>
    <tr>
      <th scope="col" width="2%">STT</th>
      <th scope="col" width="10%">Email</th>
      <th scope="col" width="10%">Tên</th>
      <th scope="col" width="10%">Số điện thoại</th>
      <th scope="col" width="10%">Địa chỉ</th>
      <th scope="col" width="20%">Lớp học</th>
      <th scope="col" width="20%">Khoá học</th>
      <th scope="col">Thêm lớp học</th>
      <th scope="col">Sửa</th>
      <th scope="col">Xóa</th>

    </tr>
  </thead>
  <tbody>
    <% students.forEach((student, index) => {%>
    <tr>
      <td><%= ++offset %></td>
      <td><%= student.email %></td>
      <td><%= student.name %></td>
      <td><%= student.phone %></td>
      <td><%= student.address %></td>
      <% if(student.students_classes?.length){%>
          <td width="20%"><%= className[student.id] %></td>
          <% let course = "" %>
          <% student.students_classes.forEach((element, index) =>{ %>
              <% if(index === student.students_classes.length-1){%>
                
                <%if(course.includes(element?.Class?.Course?.name)){%>
                  <% course = course.slice(0, course.length-2) %>
                  <% return %>
                <%} %>
                
                <% if(!course){%>
                  <% course += element?.Class?.Course?.name ?? "Chưa có khóa học" %>
                  <% return %>
       
                <%} %>
                <% course += element?.Class?.Course?.name %>
                 
              <%}else{%>
                <% if(!element?.Class?.Course?.name){%>
                  <% course +=  "" %>
                  <% return %>
                <%}if(course.includes(element.Class.Course.name)){%>
                  <% return %>
                <%}%>
                  <% course += element?.Class?.Course?.name + ", " %>
              <%} %>
            
               
          <%}); %>
          <td width="20%"><%= course  %></td>
      <%}else{%>
        <td>Chưa có lớp học</td>
        <td>Chưa có khóa học</td>
      <%} %>
    
      <td>
        <a
          href="/admin/manager/students/<%= student.id  %>/addClass"
          class="btn btn-success"
          >
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-fill-add" viewBox="0 0 16 16">
            <path d="M12.5 16a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7m.5-5v1h1a.5.5 0 0 1 0 1h-1v1a.5.5 0 0 1-1 0v-1h-1a.5.5 0 0 1 0-1h1v-1a.5.5 0 0 1 1 0m-2-6a3 3 0 1 1-6 0 3 3 0 0 1 6 0"/>
            <path d="M2 13c0 1 1 1 1 1h5.256A4.5 4.5 0 0 1 8 12.5a4.5 4.5 0 0 1 1.544-3.393Q8.844 9.002 8 9c-5 0-6 3-6 4"/>
          </svg>
        </a
        >
      </td>
      <td>
        <a
        href="/admin/manager/students/edit/<%= student.id  %>"
        class="btn btn-warning edit"
      > <svg  xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
        <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
        <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z"/>
      </svg>
        </a>   
      </td>
      <form action="/admin/manager/students/delete/<%= student.id  %>" method="post">
        <td>
          <button type="submit" class="btn btn-danger delete">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
              <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"/>
              <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"/>
            </svg>
          </button>
        </td>
      </form>
    </tr>
    
    <% }) %>
  </tbody>

  <% } %>
</table>

<% if (totalPage > 1) { %>

<nav class="d-flex justify-content-end mt-2">
  <ul class="pagination">
    <% if (page > 1) { %>
    <li class="page-item">
      <a class="page-link" href="?page=<%= +page - 1 %>">Trước</a>
    </li>
    <% } %> <% for (let i = 1; i <= totalPage; i++) { %>
    <li class="page-item <%= +page === +i ? 'active': '' %>">
      <a class="page-link" href="?<%= getPaginateUrl(req, i) %>"><%= i %></a>
    </li>
    <% } %> <% if (page < totalPage) { %>
    <li class="page-item">
      <a class="page-link" href="?page=<%= +page + 1 %>">Sau</a>
    </li>
    <% } %>
  </ul>
</nav>
<% } %>
<script>
  const btnDelete = document.querySelectorAll(".btn.btn-danger.delete");
  btnDelete.forEach((btn) => {
    btn.addEventListener("click", (e) => {
      const value = confirm("Bạn có chắc chắn muốn xóa người dùng này?");
      if (!value) {
        e.preventDefault();
      }
    });
  });
</script>
