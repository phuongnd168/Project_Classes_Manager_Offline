<% if(error?.length){ %>
    <label id="error-toast"><%= error[0].msg %></label>
<% } %> <% if(success?.length){ %>
    <label id="success-toast"><%= success %></label>
<% } %>
<h1><%= exerciseDetail.title  %></h1>

<%- exerciseDetail.content %>

<h2 class="text-secondary mt-2">Bình luận</h2>
<% if(exercisesSubmit.length){%>

    <% exercisesSubmit.forEach(e => {%>
   
            <div class="d-flex justify-content-start mb-4">
                <label class="text-primary"><%= e.User["name"] %><%= getType(e.User["typeId"])  %>:</label>
                <div class="ml-2" id="<%= e.id  %>">
                    <%- e.content  %>
                    <label style="cursor: pointer;" class="text-success p-0">Trả lời</label>
                    <form style="display: none;" id="form<%= e.id  %>" method="post">
                        <input name="exercise" value="<%= e.id  %>" hidden/>
                        <textarea name="comment"></textarea>
                        <div class="col-md-6">
                            <button type="submit" class="btn btn-success mt-2 mr-2">Trả lời</button>
                        </div>
                    </form>
                    <% if(comments.length){%>
                        <% comments.forEach(comment => {%>
                            <% if(comment.parentId === e.id){%>
                                <div class="d-flex justify-content-start">
                                    <label class="text-primary"><%= comment.User["name"] %><%= getType(comment.User["typeId"])  %>:</label>
                                    <div class="ml-2">
                                        <%- comment.content  %>
                                    </div>
                    
                                </div>
                            <%} %>
                       
                    <%}); %>
        
                    <%} %>
                </div>
            </div>
    
          
            
        
     
    <%}); %>

<%}else{%>
    <p>Chưa có bình luận</p>
<%} %>

    <a href="/teacher/manager/classes" class="btn btn-danger">Quay lại</a>



<script>
    const reply = document.getElementsByClassName("text-success p-0")
  
    let check = false
    for (let element of reply) {
      element.addEventListener("click", (e) => {
        check = !check
        if(!check){
          document.getElementById("form"+element.parentElement.id).style.display = "none"
        }
        else{
          document.getElementById("form"+element.parentElement.id).style.display = "block"
        }
       
      })
    }
  
</script>
<script src="/assets/js/wysiwyg.js"></script>