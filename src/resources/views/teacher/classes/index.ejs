<% if(error?.length){ %>
    <label id="error-toast"><%= error %></label>
    <% } %> <% if(success?.length){ %>
    <label id="success-toast"><%= success %></label>
    <% } %>
    
    <form action="" class="mb-2">
      <div class="row">
        <div class="col-10">
          <input
            type="search"
            name="keyword"
            class="form-control"
            placeholder="Từ khóa tìm kiếm..."
            value="<%= req.query.keyword %>"
          />
        </div>
        <div class="col-2 d-grid">
          <button type="submit" class="btn btn-primary">Tìm kiếm</button>
        </div>
      </div>
    </form>
    <table class="table table-bordered">
      <% if(classes?.length){%>

      <a href="/teacher/manager/classes/export-excel" class="btn btn-secondary mb-2 ml-2"
      ><b>Export Excel</b></a>
      
      <thead>
        <tr>
          <th scope="col">STT</th>
          <th width="12%" scope="col">Tên lớp</th>
          <th scope="col">Sĩ số</th>
          <th width="10%" scope="col">Ngày khai giảng</th>
          <th width="10%" scope="col">Ngày bế giảng</th>
          <th width="15%" scope="col">Lịch học</th>
          <th width="10%" scope="col">Thời gian học</th>
          <th width="10%" scope="col">Giảng viên</th>
          <th scope="col">Khóa học</th>
          <th>Điểm danh</th>
      
        </tr>
      </thead>
      <tbody>
        <% classes.forEach((c, index) => {%>
        <tr>

          <td><%= ++offset %></td>
          <td><%= c.name %></td>
          <td><%= c.quantity %></td>
          <td><%= c.startDate %></td>
          <td><%= c.endDate %></td>
          
          <%  if (c.classes_schedules?.length) {%>
            <% let schedule = "" %>
            <%  c.classes_schedules.forEach((e, index) => {%>
                <% if(index===c.classes_schedules.length-1){%>
                  <% schedule += getDay(e.schedule)  %>
                  <% return %>
                <%} %>
                <% schedule += getDay(e.schedule) + ", " %>
          
                <%});%>
                <td><%= schedule %></td>
              <%}else{%>
              <td><%= getDay(c.schedule) %></td>
              <%}%>
         
    
          <td><%= c.timeLearn %></td>
         
          <td>
            <%= c?.Course?.User?.name ?? "Chưa có giảng viên" %>
          </td>
          <td><%= c?.Course?.name ?? "Chưa có khóa học" %></td>
   
            
          <td>
            <a
              href="/teacher/manager/classes/<%= c.id %>/attendance"
              class="btn btn-success"
              >
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-calendar-check" viewBox="0 0 16 16">
                <path d="M10.854 7.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L7.5 9.793l2.646-2.647a.5.5 0 0 1 .708 0"/>
                <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5M1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4z"/>
              </svg>
            </a
            >
          </td>
    
        </tr>
        <% }) %>
      </tbody>
    
      <% } %>
    </table>

    <% if (totalPage > 1) { %>
      <nav class="d-flex justify-content-end mt-2 ml-auto">
        <ul class="pagination">
          <% if (page > 1) { %>
          <li class="page-item">
            <a class="page-link" href="?page=<%= +page - 1 %>">Trước</a>
          </li>
          <% } %> <% for (let i = 1; i <= totalPage; i++) { %>
          <li class="page-item <%= +page === +i ? 'active': '' %>">
            <a class="page-link" href="?<%= getPaginateUrl(req, i) %>"><%= i %></a>
          </li>
          <% } %> <% if (page < totalPage) { %>
          <li class="page-item">
            <a class="page-link" href="?page=<%= +page + 1 %>">Sau</a>
          </li>
          <% } %>
        </ul>
      </nav>
    <% } %>

