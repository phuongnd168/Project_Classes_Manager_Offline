<title>Sửa tài liệu</title>
<% if(error?.length){ %>
  <label id="error-toast"><%= error[0].msg %></label>
  <% } %> <% if(success?.length){ %>
  <label id="success-toast"><%= success %></label>
  <% } %>
  
  <script src="https://cdn.ckeditor.com/ckeditor5/41.1.0/classic/ckeditor.js"></script>
  <form action="" method="post" novalidate>
    <label class="form-label">Tiêu đề tài liệu</label>
    <div class="col-8">
  
      <input
        type="text"
        class="form-control"
        name="title"
        placeholder="Tiêu đề tài liệu..."
        value="<%= moduleDocument.title %>"
      />
    </div>
  
      <label for="floatingTextarea2">Nội dung tài liệu</label>
        <textarea id="editor" name="document" class="form-control mt-2" placeholder="Nội dung tài liệu..." id="floatingTextarea2"><%= data  %>
        </textarea>


      
    <div class="col-10 mt-2">
      <button class="btn btn-success mr-2" type="submit">Sửa</button>
      <a href="/teacher/manager/courses/<%= id  %>/module" class="btn btn-danger">Quay lại</a>
    </div>
  </form>
  <script src="/assets/js/wysiwyg.js"></script>