<% if(error?.length){ %>
    <label id="error-toast"><%= error %></label>
<% } %> <% if(success?.length){ %>
    <label id="success-toast"><%= success %></label>
<% } %>
<link rel="stylesheet" type="text/css" href="/assets/css/accordion.css" />
<a href="/teacher/manager/courses/<%= id  %>/module/add" class="btn btn-success mb-2">Thêm</a>

<% if(modules.length){%>
  <% modules.forEach((e, i) => {%>
    <details>
      
      <summary class="d-flex justify-content-between">
        <%= i+1 + ". "  %><%= e.name  %> 
        <a style="color: white;" href="/teacher/manager/courses/<%= id  %>/module/add-module-document/<%= e.id %>"> <svg xmlns="http://www.w3.org/2000/svg" width="20" height="40" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16"> <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/> <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"/> </svg> </a> 
      </summary>
      <% if(e.module_documents.length){%>
        <% e.module_documents.forEach((element, index) => {%>
    
          <div class="ctn d-flex justify-content-between">
            <h3><%= element.title  %></h3>
            <a style="color: black;" href="/teacher/manager/courses/<%= id  %>/module/edit-module-document/<%= element.id %>"> <svg xmlns="http://www.w3.org/2000/svg" width="20" height="40" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16"> <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/> <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z"/> </svg> </a>

          </div>
       
        <%}); %>

      <%}else{%>
        <div class="ctn">
          <h3>Chưa có tài liệu</h3>
        </div>
  
      <%} %>
 
   
    </details>
  <%}); %>
  
  <%}else{%>
    <h1>Chưa có tài liệu</h1>
  <%} %>
<div class="col-10 mt-2">

  <a href="/teacher/manager/courses" class="btn btn-danger">Quay lại</a>
</div>


