<% if(error?.length){ %>
<label id="error-toast"><%= error[0].msg %></label>
<% } %> <% if(success?.length){ %>
<label id="success-toast"><%= success %></label>
<% } %>

<script type="text/javascript" src="http://js.nicedit.com/nicEdit-latest.js"></script>

<form action="" method="post" novalidate>
  <label class="form-label">Tiêu đề tài liệu</label>
  <div class="col-8">

    <input
      type="text"
      class="form-control"
      name="title"
      placeholder="Tiêu đề tài liệu..."
    />
  </div>

    <label for="floatingTextarea2">Nội dung tài liệu (Markdown)</label>
 
      <textarea name="document" id="area" class="form-control mt-2" placeholder="Nội dung tài liệu..." style="height: 50vh"></textarea>


    
  <div class="col-10 mt-2">
    <button class="btn btn-success mr-2" type="submit">Thêm</button>
    <a href="/teacher/manager/courses/<%= id  %>/module" class="btn btn-danger">Quay lại</a>
  </div>
</form>
