<title>Điểm danh</title>
<% if(error?.length){ %>
    <label id="error-toast"><%= error[0].msg %></label>
    <% } %> <% if(success?.length){ %>
    <label id="success-toast"><%= success %></label>
    <% } %>
<form action="" method="post" novalidate>
  <table class="table">
      <thead>
        <tr>
          <th scope="col">STT</th>
          <th scope="col">Ngày học</th>
          <th scope="col">Điểm danh</th>
        </tr>
      </thead>
      <tbody>
      <% attendanceDetail.forEach((attendance, index) => {%>
    
            <tr>
              <td><%= index + 1 %></td>
              <td><%= moment(attendance.dateLearning).locale('vi').format('L') %></td>
              <td>
                <% if(attendance.dateLearning.getTime()>new Date().getTime()){%>
                    <label class="text-warning">Chưa điểm danh</label>
                 
                <%}else{%>
                    <% if(attendance.status){%>
                      <label class="text-success">Có mặt</label>
                    <%}else{%>
                      <label class="text-danger">Vắng mặt</label>
                      <%} %>
                 
                   
                <%} %>
       

              </td>
            </tr>
          
         
      <%}); %>
  </tbody>
  </table>
  
<div class="col-10 mt-2">

    <a href="/classes" class="btn btn-danger">Quay lại</a>
</div>
</form>
