
<title>Tài liệu</title>
<% if(error?.length){ %>
  <label id="error-toast"><%= error %></label>
<% } %> <% if(success?.length){ %>
  <label id="success-toast"><%= success %></label>
<% } %>
<link rel="stylesheet" type="text/css" href="/assets/css/accordion.css" />


<% if(data.length){%>
    <% data.forEach((e, i) => {%>
      <details>
        <summary><%= i+1 + ". "  %><%= e.name  %></summary>
        <% if(e.module_documents.length){%>
          <% e.module_documents.forEach((element, index) => {%>
      
            <div class="ctn">
              <h3><%= element.title  %></h3>
              <div class="ml-4">
                <%- documents[element.id]  %>
              </div>
        
            </div>
         
          <%}); %>

        <%}else{%>
          <div class="ctn">
            <h3>Chưa có tài liệu</h3>
          </div>
    
        <%} %>
   
     
      </details>
    <%}); %>
    
    <%}else{%>
      <%- include('../../layouts/template.not.data.ejs') %>
    <%} %>
    <div class="col-10 mt-2">

      <a href="/courses" class="btn btn-danger">Quay lại</a>
    </div>
