<title>Tất cả câu hỏi</title>
<% if(error?.length){ %>
    <label id="error-toast"><%= error[0].msg %></label>
<% } %> <% if(success?.length){ %>
    <label id="success-toast"><%= success %></label>
<% } %>

<% if(questions.length){%>
    <% questions.forEach(question => {%>
        <div class="d-flex justify-content-start mb-4">
            <label class="text-primary"><%= question.User["name"] %><%= getType(question.User["typeId"])  %>:</label>
            <div class="ml-2">
                <%- question.content  %>
                <% if(question.answers.length){%>
                    <% question.answers.forEach(element => {%>
                      <div class="d-flex justify-content-start">
                      <label class="text-primary"><%= element.User["name"] %><%= getType(element.User["typeId"])  %>:</label>
                      <div class="ml-2">
                        <%- element.content  %>
                      </div>
            
                      </div>
                    <%}); %>
            
                <%} %>
            </div>
            
        </div>
       
    <%}); %>
<%}else{%>
    <h1>Chưa có câu hỏi</h1>
<%} %>
<a href="/classes/<%= classId  %>/questions" class="btn btn-danger mt-2">Quay lại</a>